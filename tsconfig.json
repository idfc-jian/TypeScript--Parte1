// Archivo de configuraci√≥n principal para el compilador de TypeScript.
{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [ "node" ] // Incluyer los tipos de Node.js.
    }
}